@page
@model Mentorship_CalorieTracker.Pages.JournalModel
@{
    ViewData["Title"] = "Journal Entries" ;
}

<div class="text-center">
    <h1>Food Journal</h1>
    @if (Model.Entries.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Food</th>
                    <th>Servings</th>
                    <th>Calories</th>
                    <th>Protein (g)</th>
                    <th>Fat (g)</th>
                    <th>Carbs (g)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in Model.Entries)
                {
                    <tr>
                        <td>@entry.EntryDate.ToString("g")</td>
                        <td>@entry.Food</td>
                        <td>@entry.Servings</td>
                        <td>@entry.Calories</td>
                        <td>@entry.ProteinGrams</td>
                        <td>@entry.FatGrams</td>
                        <td>@entry.CarbohydratesGrams</td>
                        <td>
                            <a asp-page="/JournalEntry" asp-route-id="@entry.Id">Edit</a> |
                            <a asp-page="/EntryDelete" asp-route-id="@entry.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item" aria-current="page">
                    <span class="page-link">2</span>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <p>No entries found.</p>
    }
</div>
